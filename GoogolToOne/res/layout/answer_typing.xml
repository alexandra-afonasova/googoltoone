<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_global_padding"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/beginning_request_ans_typ"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size"/>

    <TextView
            android:id="@+id/begin_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/request_text_size"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_answer_ans_typ"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:padding="@dimen/activity_global_padding"/>

    <!--TODO: maybe choose input type with correction-->
    <EditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/edit_text_padding_top"
            android:hint="@string/default_answer_ans_typ"
            android:inputType="text"/>

    <!-- TODO: How can i scale to width every images? -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/error_img1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/error"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        <ImageView
                android:id="@+id/error_img2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/error"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

        <ImageView
                android:id="@+id/error_img3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/error"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
    </LinearLayout>

    <Button
            android:id="@+id/checkButton"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/button_margin_top"
            android:text="@string/check_ans_typ"/>

</LinearLayout>